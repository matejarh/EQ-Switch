{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Resource",
            "type": "shell",
            "command": "rc",
            "args": [
                "resource.rc"
            ],
            "group": "build"
        },
        {
            "label": "Build EXE with Resources",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/std:c++17",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${fileBasename}",
                "resource.res",
                "/link",
                "user32.lib",
                "gdi32.lib"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "dependsOn": [
                "Compile Resource"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/std:c++17",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}",
/*                 "imgui.cpp",
                "imgui_draw.cpp",
                "imgui_widgets.cpp",
                "imgui_tables.cpp",
                "imgui_demo.cpp",
                "imgui_impl_win32.cpp",
                "imgui_impl_dx11.cpp", */
                "resource.res",
                "/link",
                /* "dxgi.lib",
                "d3d11.lib", */
                "user32.lib",
                "gdi32.lib",
                "Shell32.lib"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}