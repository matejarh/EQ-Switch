{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Resource",
            "type": "shell",
            "command": "rc",
            "args": [
                "resource.rc"
            ],
            "group": "build"
        },
        {
            "label": "Build EXE with Resources",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${fileBasename}",
                "resource.res",
                "/link",
                "user32.lib",
                "gdi32.lib"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "dependsOn": [
                "Compile Resource"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
